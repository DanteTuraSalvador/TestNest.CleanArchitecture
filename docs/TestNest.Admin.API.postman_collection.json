	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://localhost:5001",
			"type": "string"
		},
		{
			"key": "api_version",
			"value": "1.0",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "refresh_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('access_token', response.accessToken);",
									"    pm.collectionVariables.set('refresh_token', response.refreshToken);",
									"    console.log('Access token saved:', response.accessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@testnest.com\",\n  \"password\": \"Admin@123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v{{api_version}}/Auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v{{api_version}}", "Auth", "login"]
						},
						"description": "Authenticates a user and returns JWT access and refresh tokens."
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('access_token', response.accessToken);",
									"    pm.collectionVariables.set('refresh_token', response.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v{{api_version}}/Auth/refresh",
							"host": ["{{base_url}}"],
							"path": ["api", "v{{api_version}}", "Auth", "refresh"]
						},
						"description": "Refreshes an access token using a valid refresh token."
					},
					"response": []
				},
				{
					"name": "Revoke Token",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v{{api_version}}/Auth/revoke",
							"host": ["{{base_url}}"],
							"path": ["api", "v{{api_version}}", "Auth", "revoke"]
						},
						"description": "Revokes a refresh token."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for login, token refresh, and token revocation."
		},
